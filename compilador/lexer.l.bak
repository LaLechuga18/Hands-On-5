%{
#include "lang.tab.h"
#include <string.h>
%}

LETTER   [a-zA-Z_]
DIGIT    [0-9]
ID       {LETTER}({LETTER}|{DIGIT})*
NUMBER   {DIGIT}+

%%

"int"               { return INT; }
"float"             { return FLOAT; }
"void"              { return VOID; }
"return"            { return RETURN; }

"if"                { return IF; }
"else"              { return ELSE; }

"("                 { return '('; }
")"                 { return ')'; }
"{"                 { return '{'; }
"}"                 { return '}'; }
";"                 { return ';'; }
","                 { return ','; }
"="                 { return '='; }

"+"                 { return '+'; }
"-"                 { return '-'; }
"*"                 { return '*'; }
"/"                 { return '/'; }

{NUMBER}            { yylval.ival = atoi(yytext); return NUMBER; }
{ID}                { yylval.str = strdup(yytext); return ID; }

[ \t\r\n]+          ;   /* ignorar espacios */
.                   ;   /* ignorar cualquier otro */

%%

int yywrap() { return 1; }
